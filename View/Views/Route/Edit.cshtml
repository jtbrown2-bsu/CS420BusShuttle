@model View.Models.RouteEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Route</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="LoopId" />
            <input type="hidden" asp-for="Order" />
            <div class="form-group">
                <label asp-for="StopId" class="control-label">Stop</label>
                <select asp-for="StopId" class="form-control" asp-items="ViewBag.AvailableStops"></select>
                <span asp-validation-for="StopId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
