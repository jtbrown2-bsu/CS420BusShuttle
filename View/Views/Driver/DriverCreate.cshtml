@model DriverModel

<h2>Create Driver</h2>

<form asp-action="DriverCreate">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" value="" />
        <span asp-validation-for="FirstName"></span>
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" value=""/>
        <span asp-validation-for="LastName"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>

@if (ViewData["Drivers"] != null)
{
    <h2>Driver Table</h2>
    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>FirstName</th>
            <th>LastName</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var driver in (List<DriverModel>)ViewData["Drivers"])
        {
            <tr>
                <td>@driver.Id</td>
                <td>@driver.FirstName</td>
                <td>@driver.LastName</td>
                <td>
                    <a asp-action="EditDriver" asp-route-id="@driver.Id">Edit</a>
                </td>
                <td>
                    <form method="post" asp-action="DeleteDriver" asp-route-id="@driver.Id">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
}