@model BusModel

<h2>Create Bus</h2>

<form asp-action="BusCreate">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="BusNumber"></label>
        <input asp-for="BusNumber" class="form-control" value="" />
        <span asp-validation-for="BusNumber"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>

@if (ViewData["Buses"] != null)
{
    <h2>Bus Table</h2>
    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Bus Number</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var bus in (List<BusModel>)ViewData["Buses"])
        {
            <tr>
                <td>@bus.Id</td>
                <td>@bus.BusNumber</td>
                <td>
                    <a asp-action="EditBus" asp-route-id="@bus.Id">Edit</a>
                </td>
                <td>
                    <form method="post" asp-action="DeleteBus" asp-route-id="@bus.Id">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
}