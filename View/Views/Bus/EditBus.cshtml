@model BusModel

<h2>Edit Bus</h2>

<form asp-action="EditBus">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="BusNumber"></label>
        <input asp-for="BusNumber" class="form-control" />
        <span asp-validation-for="BusNumber"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="BusCreate"><button type="button" class="btn btn-secondary">Cancel</button></a>
</form>