@model Core.Models.Entry

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Entry</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Entry</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Time
        </dt>
        <dd class = "col-sm-10">
            @Html.Raw(ViewBag.Time)
        </dd>
        <dt class="col-sm-2">
            Stop
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Stop.Name)
        </dd>
        <dt class="col-sm-2">
            Loop
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Loop.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
